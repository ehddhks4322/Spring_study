<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="m">
	
	<select id="check" resultType="int" parameterType="String">
		select count(*) from it_member where m_tel = #{tel}
	</select>
	
	<select id="check_id" resultType="int" parameterType="String">
		select count(*) from it_member where m_id = #{id}
	</select>
	
	<insert id="member_insert" parameterType="member">
		insert into it_member values(
			SEQ_IT_MEMBER_IDX.nextVal,
			#{m_name},
			#{m_id},
			#{m_pw},
			#{m_tel},
			#{m_email},
			#{m_loc} 
		)
	</insert>
	
	<select id="login_check" resultType="member" parameterType="String">
		select * from it_member where m_id = #{id}
	</select>
	
	<select id="result_id" resultType="member" parameterType="java.util.Map">
		select * from it_member where m_name = #{name} and m_tel = #{tel}
	</select>
	
	<select id="result_pw" resultType="member" parameterType="java.util.Map">
		select * from it_member where m_name = #{name} and m_id = #{id}
	</select>
</mapper>












